@using OCMS.Dtos
@model IEnumerable<OCMS.Dtos.ComplaintDtos.GetComplaintDto>
@using OCMS.Common.CustomClasses.Enums.ComplaintEnums

@{
    string TableName = (string)ViewBag.TableName;
}

<div class="alert alert-primary text-center fw-bold fs-5 mb-3">
    @TableName
</div>

<div class="table-responsive">
    <table id="datatable" class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">TrackId</th>
                <th scope="col">Title</th>
                <th scope="col">Image</th>
                <th scope="col">Location</th>
                <th scope="col">Category</th>
                <th scope="col">Status</th>
                <th scope="col">Incident Date</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TrackId</td>
                    <td>@item.Title</td>
                    <td>
                        <img src="@item.ImageUrl" class="img-thumbnail rounded" style="height:60px; width:60px;" />
                    </td>
                    <td>@item.Location</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <select class="form-select form-select-sm" onchange="UpdateStatus('@item.ComplaintId', this.value)">
                            <option value="@((int)ComplaintStatus.Pending)" @(item.Status == ComplaintStatus.Pending ? "selected" : "")>Pending</option>
                            <option value="@((int)ComplaintStatus.Inprogress)" @(item.Status == ComplaintStatus.Inprogress ? "selected" : "")>In Progress</option>
                            <option value="@((int)ComplaintStatus.Rejected)" @(item.Status == ComplaintStatus.Rejected ? "selected" : "")>Rejected</option>
                            <option value="@((int)ComplaintStatus.Resolved)" @(item.Status == ComplaintStatus.Resolved ? "selected" : "")>Resolved</option>
                        </select>
                    </td>
                    <td>@item.IncidentDate</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger me-1" onclick="Delete('@item.ComplaintId')">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-info" onclick="Update('@item.ComplaintId')">
                            <i class="fas fa-edit"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                responsive: true,
                autoWidth: false,
                pageLength: 10,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search complaints..."
                }
            });
        });
    </script>
}