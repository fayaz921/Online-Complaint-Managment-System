
@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Areas/Admin/Views/Shared/_OcmsAdminLayout.cshtml";
}


<style>
    body {
        background-color: #f4f6f9; /* dashboard light gray */
    }

    .card {
        border: none;
        border-radius: 12px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.1);
        }

    .stat-icon {
        font-size: 2rem;
        padding: 15px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

    .bg-gradient-blue {
        background: linear-gradient(135deg, #4e73df, #224abe);
        color: white;
    }

    .bg-gradient-green {
        background: linear-gradient(135deg, #1cc88a, #13855c);
        color: white;
    }

    .bg-gradient-yellow {
        background: linear-gradient(135deg, #f6c23e, #dda20a);
        color: white;
    }

    .bg-gradient-red {
        background: linear-gradient(135deg, #e74a3b, #be2617);
        color: white;
    }
</style>

<!-- Top Header Section -->
<div class="row mb-4">
    <div class="col-sm-12">
        <div class="d-flex justify-content-between align-items-center p-4 rounded shadow-sm bg-gradient-blue">
            <div>
                <h1 class="h3 mb-1 fw-bold">Admin Dashboard</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0" style="background: transparent;">
                        <li class="breadcrumb-item"><a href="#" class="text-light text-decoration-none">Home</a></li>
                        <li class="breadcrumb-item active text-light">Dashboard</li>
                    </ol>
                </nav>
            </div>
            <i class="bi bi-speedometer2 fs-1"></i>
        </div>
    </div>
</div>

<!-- Welcome Card -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <h2 class="fw-bold text-dark">
                    Welcome to <span class="text-primary">Online Complaint Management System</span>
                </h2>
                <p class="text-muted mb-0">Manage complaints, track users, and monitor reports from one central place.</p>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Stats -->
<div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <div class="stat-icon bg-gradient-blue">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h5 class="fw-bold mt-2">Users</h5>
                <p class="text-muted mb-0">1,245</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <div class="stat-icon bg-gradient-green">
                    <i class="bi bi-chat-dots-fill"></i>
                </div>
                <h5 class="fw-bold mt-2">Complaints</h5>
                <p class="text-muted mb-0">356</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <div class="stat-icon bg-gradient-yellow">
                    <i class="bi bi-check2-circle"></i>
                </div>
                <h5 class="fw-bold mt-2">Resolved</h5>
                <p class="text-muted mb-0">298</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card shadow-sm text-center">
            <div class="card-body">
                <div class="stat-icon bg-gradient-red">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <h5 class="fw-bold mt-2">Pending</h5>
                <p class="text-muted mb-0">58</p>
            </div>
        </div>
    </div>
</div>
