
@using OCMS.Dtos
@model IEnumerable<GetUserDto>
@using OCMS.Common.CustomClasses

@{
    string TableName = (string)ViewBag.TableName;
}

<div class="alert alert-primary text-center fw-bold fs-5 mb-3">
    @TableName
</div>

<div class="table-responsive">
    <table id="datatable" class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Created At</th>
                <th scope="col">Image</th>
                <th scope="col">Role</th>
                <th scope="col">Status</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.CreatedAt</td>
                    <td>
                        <img src="@item.ImageLink" class="img-thumbnail rounded" style="height:60px; width:60px;" />
                    </td>

                    @* Role dropdown *@
                    <td>
                        <select class="form-select form-select-sm">
                            <option value="0" @(item.Role == Role.Admin ? "selected" : "")>Admin</option>
                            <option value="1" @(item.Role == Role.User ? "selected" : "")>User</option>
                        </select>
                    </td>

                    @* Status dropdown *@
                    <td>
                        <select class="form-select form-select-sm" onchange="UpdateStatus('@item.UserId', this.value)">
                            <option value="@((int)UserStatus.Pending)" @(item.Status == UserStatus.Pending ? "selected" : "")>Pending</option>
                            <option value="@((int)UserStatus.Approved)" @(item.Status == UserStatus.Approved ? "selected" : "")>Approved</option>
                            <option value="@((int)UserStatus.Rejected)" @(item.Status == UserStatus.Rejected ? "selected" : "")>Rejected</option>
                            <option value="@((int)UserStatus.Suspended)" @(item.Status == UserStatus.Suspended ? "selected" : "")>Suspended</option>
                            <option value="@((int)UserStatus.Warning)" @(item.Status == UserStatus.Warning ? "selected" : "")>Warning</option>
                        </select>
                    </td>

                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger me-1" onclick="Delete('@item.UserId')">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-info" onclick="Update('@item.UserId')">
                            <i class="fas fa-edit"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                responsive: true,
                autoWidth: false,
                pageLength: 10,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search users..."
                }
            });
        });
    </script>
}
