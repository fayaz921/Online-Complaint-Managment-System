@model OCMS.Dtos.UserLoginDto
@using OCMS.Common.CustomClasses

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";
}

<!-- Login Section -->
<section class="login-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-card">
                    <div class="login-header">
                        <h2>Welcome Back</h2>
                        <p>Please login to your account</p>
                    </div>

                    <form id="loginForm" class="login-form"  onsubmit="LoginUser(event)">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="Email" required placeholder="Enter your email">
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="Password" required placeholder="Enter your password">

                        </div>

                        <div class="form-options">
                            <label class="remember-me">
                                <input type="checkbox"> Remember me
                            </label>
                            <a href="forgot-password.html">Forgot password?</a>
                        </div>

                        <button type="submit" class="login-btn">Login</button>

                        <div class="login-footer">
                            Don't have an account? <a href="/Users/Account/Register">Create one</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/Assets/assets/js/jquery.min.js"></script>

<script>
    function LoginUser(event) {
        event.preventDefault();
        event.stopImmediatePropagation();
        var frmdata = new FormData(document.getElementById("loginForm"));
        
        $.ajax({
            type: "Post",
            url: "/Users/Account/LoginCheck",
            data: frmdata,
            contentType: false,
            processData: false,
            success: function (result) {
                if (result == @((int)OperationStatus.Success)) {
                    alert("Login Successfully");
                    //window.location.href = "/Users/Account/Login";
                }
                else {
                    alert("User Not Found");
                }
            }
        });

    }

</script>
