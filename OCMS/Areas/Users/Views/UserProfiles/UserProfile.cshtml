
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";


}


<!-- Profile Section -->
<section class="profile-section">
    <div class="profile-container">

        <!-- User Info -->
        <div class="profile-top">
            <!-- Left: Image -->
            <div class="profile-left">
                <img src="https://i.pravatar.cc/150?img=7" alt="User Avatar" class="profile-avatar">
                <h2>John Doe</h2>
                <p>Member since: Jan 2024</p>
            </div>

            <!-- Right: Editable Form -->
            <div class="profile-right">
                <h3>Edit Profile</h3>
                <form>
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" value="John Doe">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" value="john.doe@example.com">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" value="+1 234 567 890">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" value="123 Main Street, NY">
                    </div>
                    <button type="submit" class="btn">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</section>
<section class="profile-section">
    <div class="profile-container">
        <!-- Complaint Records -->
        <div class="complaint-records">
            <h3>My Complaints</h3>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#1001</td>
                        <td>Service</td>
                        <td>Internet not working</td>
                        <td><span class="status pending">Pending</span></td>
                        <td>12 Jan 2025</td>
                    </tr>
                    <tr>
                        <td>#1002</td>
                        <td>Billing</td>
                        <td>Overcharged for service</td>
                        <td><span class="status resolved">Resolved</span></td>
                        <td>10 Jan 2025</td>
                    </tr>
                    <tr>
                        <td>#1003</td>
                        <td>Maintenance</td>
                        <td>Streetlight not working</td>
                        <td><span class="status in-progress">In Progress</span></td>
                        <td>08 Jan 2025</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</section>
