
@{
    ViewBag.Title = "About";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";
}

    <!-- Hero Section -->
    <section class="about-hero py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center text-center">
                <div class="col-lg-12">
                    <h1 class="display-4 fw-bold mb-3">Empowering Citizens Through Technology</h1>
                    <p class="lead" style="color: black;">Our Online Complaint Management System is designed to ensure your voice is heard, and your issues are resolved — quickly, fairly, and transparently.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section py-5 bg-light">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md-3">
                    <div class="stat-card p-4 rounded-3">
                        <h2 class="display-3 fw-bold text-primary">1,200+</h2>
                        <p class="fs-5">Complaints Resolved</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card p-4 rounded-3">
                        <h2 class="display-3 fw-bold text-primary">95%</h2>
                        <p class="fs-5">Satisfaction Rate</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card p-4 rounded-3">
                        <h2 class="display-3 fw-bold text-primary">24h</h2>
                        <p class="fs-5">Average Response Time</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-card p-4 rounded-3">
                        <h2 class="display-3 fw-bold text-primary">500+</h2>
                        <p class="fs-5">Active Communities</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Who We Are Section -->
    <section class="who-we-are-section py-5">
        <div class="container">
            <h2 class="section-title text-center mb-4">Who We Are</h2>
            <p class="lead text-center mb-4">
                The Complaint Management System is a digital platform that simplifies how individuals, communities, and institutions raise concerns and get them addressed. Whether it’s a civic issue, service breakdown, or internal feedback — we ensure that each complaint is tracked, managed, and resolved efficiently.
            </p>
            <p class="text-center">
                Our goal is to bridge the gap between complainants and the responsible departments by providing a centralized, transparent, and user-friendly system that promotes accountability and faster response times.
            </p>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="mission-section py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <h2 class="section-title mb-4  text-center">Our Mission & Vision</h2>
                    <p class="lead">We envision a system where every concern is treated with importance and every voice matters.</p>
                    <p>
                        Our mission is to provide a fast, transparent, and efficient complaint-handling process that strengthens trust between individuals and service providers. We aim to build a responsible and responsive culture through digital transformation, one complaint at a time.
                    </p>
                </div>
            </div>
        </div>
    </section>

