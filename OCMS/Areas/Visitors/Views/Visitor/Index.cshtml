
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <h2>Report Issues Easily</h2>
            <p>Our complaint management system helps you report and track issues efficiently with complete transparency.</p>
            <div class="cta-btns">
                <a href="/Users/Account/Register" class="btn btn-secondary">Register Now</a>
                <a href="#" class="btn btn-secondary">Learn More</a>
            </div>
        </div>
    </div>
</section>

<!-- Status Cards -->
<section class="status-cards py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card status-card h-100" data-status="pending">
                    <div class="card-body text-center p-4">
                        <div class="status-icon mb-3">
                            <i class="fas fa-clock fa-3x"></i>
                        </div>
                        <h3>Pending</h3>
                        <h2 class="count">12</h2>
                        <p class="small">Complaints awaiting review</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card status-card h-100" data-status="in-progress">
                    <div class="card-body text-center p-4">
                        <div class="status-icon mb-3">
                            <i class="fas fa-tasks fa-3x"></i>
                        </div>
                        <h3>In Progress</h3>
                        <h2 class="count">8</h2>
                        <p class="small">Complaints being resolved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card status-card h-100" data-status="resolved">
                    <div class="card-body text-center p-4">
                        <div class="status-icon mb-3">
                            <i class="fas fa-check-circle fa-3x"></i>
                        </div>
                        <h3>Resolved</h3>
                        <h2 class="count">24</h2>
                        <p class="small">Complaints this month</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">How It Works</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-user-plus fa-3x text-primary"></i>
                        </div>
                        <h3>1. Register</h3>
                        <p>Create your account in just 30 seconds to start submitting complaints.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-edit fa-3x text-primary"></i>
                        </div>
                        <h3>2. Submit Complaint</h3>
                        <p>Fill out our simple form with details about your issue.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-chart-line fa-3x text-primary"></i>
                        </div>
                        <h3>3. Track Progress</h3>
                        <p>Monitor your complaint status in real-time through your dashboard.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Complaint Button -->
<div class="quick-complaint-btn">
    <a href="complaint-register.html" class="btn btn-danger btn-lg rounded-pill shadow">
        <i class="fas fa-plus me-2"></i>Submit Complaint
    </a>
</div>
