@model OCMS.Dtos.GetUserStatusDto
@using OCMS.Common.CustomClasses
@{
    ViewBag.Title = "StatusView";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";
}



<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Account Status</h4>
                </div>
                <div class="card-body">

                    <h5 class="text-center mb-4">
                        Your current status:
                        <span class="badge bg-info">@Model.Status</span>
                    </h5>

                    @if (Model.Status == UserStatus.Pending)
                    {
                        <div class="alert alert-warning text-center fw-bold rounded-3">
                            <i class="fas fa-hourglass-half me-2"></i>
                            Your account is <strong>Pending</strong>. Please wait while we review your details.

                            <p>This process typically takes 24-48 hours. You will receive an email notification once your account is approved. Please be patient during this verification process.</p>
                            <p class="mb-0">If you have any urgent concerns, feel free to contact our support team.</p>
                        </div>
                    }
                    else if (Model.Status == UserStatus.Rejected)
                    {
                        <div class="alert alert-danger text-center fw-bold rounded-3">
                            <i class="fas fa-times-circle me-2"></i>
                            Unfortunately, your account request has been <strong>Rejected</strong>.

                            <p>
                                Unfortunately, we were unable to approve your account at this time. This may be due to verification issues or policy violations.
                                Please review your submitted information carefully.
                            </p>
                            <p class="mb-0">Contact our support team for detailed information about the rejection and guidance for reapplication.</p>
                        </div>
                    }
                    else if (Model.Status == UserStatus.Suspended)
                    {

                        <div class="alert alert-dark text-center fw-bold rounded-3">
                            <i class="fas fa-ban me-2"></i>
                            Your account has been <strong>Suspended</strong>. Please contact support.

                            <p>Your account access has been restricted due to security concerns or terms of service violations. This suspension may be temporary or permanent depending on the severity of the issue.</p>
                            <p class="mb-0">Please contact our support team immediately to resolve this matter and restore your account access.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center fw-bold rounded-3">
                            <i class="fas fa-check-circle me-2"></i>
                            Your account is <strong>Active</strong>. You can use all features.

                            <p>Great! Your account is fully approved and active. You can now access all features of the complaint management system including submitting new complaints and tracking existing ones.</p>
                            <p class="mb-0">Thank you for being a valued member of our community. We're here to help resolve your concerns efficiently.</p>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>