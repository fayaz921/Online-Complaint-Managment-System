<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint Management System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    @*<link rel="stylesheet" href="~/Assets/assets/css/main.css">*@
    <link rel="stylesheet" href="~/Assets/assets/css/main.css">

</head>
<body>

    <!-- Status Ticker -->
    <div class="status-ticker bg-light py-2">
        <div class="container">
            <div class="ticker-content">
                <span class="badge bg-success me-2">Resolved</span>
                <span>Complaint #C-1254 (Water Leakage) was resolved today</span>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg ">
        <div class="container">
            <div class="logo">
                <h1>Online<span> Complaint</span></h1>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-links active" href="/Visitors/Visitor/Index">Home</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-links" href="/Visitors/Complaint/Complaint">Submit Complaint</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-links" href="#">Track Complaint</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-links" href="/Visitors/Visitor/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-links" href="/Visitors/Visitor/Contact">Contact</a>
                        </li>
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="logins-btn" href="/Admin/AdminHome/AdminIndex">Admin Side</a>
                            </li>
                        }

                        //User Profile dropdown
                        <li class="nav-item dropdown" id="userProfileDropdown">
                            <a href="#" class="nav-links dropbtn" id="userProfileBtn">User Profile ▾</a>
                            <div class="dropdown-content" id="userProfileMenu">
                                <a href="/Users/UserProfiles/UserProfile">Profile</a>
                                <a href="/Users/Account/Logout">Sign Out</a>
                            </div>
                        </li>

                    }

                    else
                    {
                        <li class="nav-item">
                            <a class="nav-links" href="/Visitors/Visitor/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-links" href="/Visitors/Visitor/Contact">Contact</a>
                        </li>
                        <li class="nav-item ms-lg-3">
                            <a class="logins-btn" href="/Users/Account/Login">Login</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>


    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/Visitors/Visitor/Index">Home</a></li>
                        <li><a href="/Visitors/Visitor/About">About Us</a></li>
                        <li><a href="/Users/Account/Register">Registration</a></li>
                        <li><a href="#">Events</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Support</h3>
                    <ul>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                        <li><a href="/Visitors/Visitor/Contact">Contact Us</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Contact Info</h3>
                    <ul>
                        <li><i class="fas fa-map-marker-alt"></i> Dera Ismail Khan</li>
                        <li><i class="fas fa-phone"></i>  +92 3089314931</li>
                        <li><i class="fas fa-envelope"></i> mfayaz21703@gmail.com</li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="text-center">
                <p class="mb-0">&copy; 2023 Complaint Management System. All rights reserved.</p>
            </div>
        </div>
    </footer>


    <!-- JQuery -->
    <script src="~/Assets/assets/js/jquery.min.js"></script>
    <!-- Bootstrap JS -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Assets/assets/js/script.js"></script>

    @RenderSection("Scripts", required: false)


</body>
</html>
