@model OCMS.Dtos.ComplaintDtos.AddComplaintDto
@{
    ViewBag.Title = "Complaint";
    Layout = "~/Areas/Visitors/Views/Shared/_VisitorLayout.cshtml";
}

<!-- Complaint Registration Section -->
<section class="complaint-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="complaint-card">
                    <div class="complaint-header">
                        <h2><i class="fas fa-exclamation-triangle me-2"></i> Register New Complaint</h2>
                        <p>Please provide complete details about your issue</p>
                    </div>

                    <form id="complaintForm" class="complaint-form" onsubmit="Complaint(event)" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="complaintTitle">Complaint Title</label>
                                    <input type="text" id="complaintTitle" name="Title" required placeholder="Brief description of your complaint">
                                    <div class="invalid-feedback">Please enter a complaint title</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="complaintCategory">Category</label>
                                    <select id="complaintCategory" class="form-select" required>
                                        <option value="" selected disabled>Select category</option>
                                        <option value="electricity">Electricity Issue</option>
                                        <option value="water">Water Supply</option>
                                        <option value="sanitation">Sanitation</option>
                                        <option value="road">Road Maintenance</option>
                                        <option value="noise">Noise Pollution</option>
                                        <option value="other">Other</option>
                                    </select>
                                    <div class="invalid-feedback">Please select a category</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="complaintDescription">Detailed Description</label>
                            <textarea id="complaintDescription" name="Description" rows="5" required
                                      placeholder="Please describe your complaint in detail including location, time, and any other relevant information"></textarea>
                            <div class="invalid-feedback">Please provide a detailed description</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="complaintLocation">Location</label>
                                    <input type="text" id="complaintLocation" required
                                           placeholder="Street address or landmark">
                                    <div class="invalid-feedback">Please specify location</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="complaintDate">Date of Incident</label>
                                    <input type="date" id="complaintDate" name="IncidentDate" required>
                                    <div class="invalid-feedback">Please select date</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Upload Evidence (Optional)</label>
                            <div class="file-upload-wrapper">
                                <input type="file" id="complaintFiles" multiple
                                       accept="image/*,.pdf,.doc,.docx"
                                       class="file-upload-input">
                                <label for="complaintFiles" class="file-upload-label">
                                    <i class="fas fa-cloud-upload-alt me-2"></i>
                                    <span>Choose files or drag them here</span>
                                </label>
                                <div class="file-preview" id="filePreview"></div>
                            </div>
                            <small class="text-muted">Max file size: 5MB (Images, PDF, DOC)</small>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="declaration" required>
                            <label class="form-check-label" for="declaration">
                                I declare that the information provided is accurate to the best of my knowledge
                            </label>
                            <div class="invalid-feedback">You must accept this declaration</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="reset" class="btn btn-outline-secondary">Clear Form</button>
                            <button type="submit" class="btn btn-primary">Submit Complaint</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



<!-- Submission Success Modal -->
<div class="modal fade" id="complaintSuccessModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-check-circle me-2"></i>Complaint Registered</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="fas fa-check-circle text-success mb-3" style="font-size: 3rem;"></i>
                <h4>Your complaint has been registered!</h4>
                <p class="mb-0">Complaint ID: <strong id="complaintIdDisplay">C-XXXX</strong></p>
                <p>Please wait while we process your request.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Continue</button>
                <a href="track-complaint.html" class="btn btn-outline-success">Track Complaint</a>
            </div>
        </div>
    </div>
</div>


<script src="~/Assets/assets/js/jquery.min.js"></script>

<script>

    function Complaint(event) {
        event.preventDefault();
        debugger;
        var frmdata = new FormData(document.getElementById("complaintForm"));
        $.ajax({
            type: 'Post',
            url: "/Visitors/Complaint/SaveComplaint",
            data: frmdata,
            contentType: false,
            processData: false,
            success: function (result) {

                //if (result == 1) {
                //    alert("complaint save Successfully");
                //}
                //else {
                //    alert("Complaint Decliend! Try Again");
                //}

                if (result.redirectUrl) {
                    // go to StatusView after complaint is saved
                    window.location.href = result.redirectUrl;
                } else {
                    alert("Complaint Declined! Try Again");
                }
            }
        })
    }

</script>
