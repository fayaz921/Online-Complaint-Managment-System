@{
    ViewBag.Title = "OTP Verification";
}

<div class="container mt-5">
    <h2 class="mb-3">OTP Verification</h2>

    <div class="mb-3">
        <label for="email" class="form-label">Enter your email:</label>
        <input type="email" id="email" class="form-control" placeholder="example@gmail.com" />
    </div>

    <button id="sendOtpBtn" class="btn btn-primary">Send OTP</button>

    <div id="otpSection" class="mt-4" style="display:none;">
        <label for="otp" class="form-label">Enter OTP:</label>
        <input type="text" id="otp" class="form-control" placeholder="Enter OTP" />

        <button id="verifyOtpBtn" class="btn btn-success mt-2">Verify OTP</button>
    </div>

    <div id="message" class="mt-3"></div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Send OTP
            $("#sendOtpBtn").click(function () {
                var email = $("#email").val();

                $.post('/Email/SendOtp', { email: email }, function (response) {
                    if (response.success) {
                        $("#message").html("<div class='alert alert-success'>OTP sent to " + email + "</div>");
                        $("#otpSection").show();
                    } else {
                        $("#message").html("<div class='alert alert-danger'>Error sending OTP</div>");
                    }
                });
            });

            // Verify OTP
            $("#verifyOtpBtn").click(function () {
                var otp = $("#otp").val();

                $.post('/Email/VerifyOtp', { otp: otp }, function (response) {
                    if (response.success) {
                        $("#message").html("<div class='alert alert-success'>OTP Verified!</div>");
                    } else {
                        $("#message").html("<div class='alert alert-danger'>Invalid OTP</div>");
                    }
                });
            });
        });
    </script>

}
